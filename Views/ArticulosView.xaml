<UserControl x:Class="Enkarta.Views.ArticulosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1100">
    <Grid x:Name="RootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Panel de búsqueda con botón Nuevo Artículo -->
        <Grid Grid.Row="0" Margin="0,0,0,20" x:Name="SearchPanel">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Buscador -->
            <StackPanel Grid.Column="0">
                <TextBlock Text="Buscar Artículo por palabra clave"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextBrush}"
                           Margin="0,0,0,8"
                           FontSize="13"/>
                <TextBox x:Name="txtBusquedaRapida"
                         Height="38"
                         VerticalContentAlignment="Center"
                         Background="{DynamicResource InputBrush}"
                         Foreground="{DynamicResource TextBrush}"
                         BorderBrush="{DynamicResource LineBrush}"
                         Padding="12,0"
                         FontSize="14"
                         TextChanged="TxtBusquedaRapida_TextChanged"/>
            </StackPanel>

            <!-- Botón Nuevo Artículo -->
            <Button Grid.Column="1"
                    x:Name="btnNuevoArticulo"
                    Content="➕ Nuevo Artículo"
                    Height="48"
                    Margin="20,0,0,0"
                    VerticalAlignment="Bottom"
                    Style="{StaticResource ButtonPrimary}"
                    Click="BtnNuevoArticulo_Click"/>
        </Grid>

        <!-- Contenedor principal que cambia entre tabla y formulario -->
        <Grid Grid.Row="1" x:Name="ContentGrid">
            <!-- Panel con tabla (visible por defecto) -->
            <Border x:Name="TablaPanel"
                    Background="{DynamicResource PanelBrush}"
                    BorderBrush="{DynamicResource LineBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="1">
                <DataGrid x:Name="dgArticulos"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          Background="Transparent"
                          BorderThickness="0"
                          PreviewMouseLeftButtonDown="DgArticulos_PreviewMouseLeftButtonDown"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          RowHeight="44">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                        <DataGridTextColumn Header="Título" Binding="{Binding Titulo}" Width="*"/>
                        <DataGridTextColumn Header="Categoría" Binding="{Binding Categoria.Nombre}" Width="150"/>
                        <DataGridTextColumn Header="Fecha Publicación"
                                            Binding="{Binding FechaPublicacion, StringFormat='{}{0:dd/MM/yyyy}'}"
                                            Width="130"/>
                        <DataGridTemplateColumn Header="Acciones" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="✏️ Editar"
                                            Style="{StaticResource ButtonSoft}"
                                            Padding="4,2"
                                            FontSize="11"
                                            Height="22"
                                            Width="60"
                                            Click="BtnEditarFila_Click"
                                            Tag="{Binding}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <!-- Panel con vista de lectura (oculto por defecto) -->
            <Border x:Name="ViewPanel"
                    Visibility="Collapsed"
                    Background="{DynamicResource PanelBrush}"
                    BorderBrush="{DynamicResource LineBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Título -->
                    <TextBlock x:Name="lblViewTitulo"
                               Grid.Row="0"
                               Text="Título del Artículo"
                               Style="{StaticResource Heading2}"
                               Margin="0,0,0,20"/>

                    <!-- Contenido lectura -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- Resumen -->
                            <TextBlock Text="Resumen"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextBrush}"
                                       Margin="0,0,0,8"
                                       FontSize="13"/>
                            <TextBlock x:Name="lblViewResumen"
                                       Text="Resumen del artículo"
                                       Foreground="{DynamicResource TextBrush}"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,20"
                                       FontSize="12"/>

                            <!-- Contenido -->
                            <TextBlock Text="Contenido"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextBrush}"
                                       Margin="0,0,0,8"
                                       FontSize="13"/>
                            <TextBlock x:Name="lblViewContenido"
                                       Text="Contenido del artículo"
                                       Foreground="{DynamicResource TextBrush}"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,20"
                                       FontSize="12"/>

                            <!-- Categoría -->
                            <TextBlock Text="Categoría"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextBrush}"
                                       Margin="0,0,0,5"
                                       FontSize="13"/>
                            <TextBlock x:Name="lblViewCategoria"
                                       Text="Categoría"
                                       Foreground="{DynamicResource MutedTextBrush}"
                                       Margin="0,0,0,20"
                                       FontSize="12"/>

                            <!-- Fecha Publicación -->
                            <TextBlock Text="Fecha de Publicación"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextBrush}"
                                       Margin="0,0,0,5"
                                       FontSize="13"/>
                            <TextBlock x:Name="lblViewFecha"
                                       Text="01/01/2024"
                                       Foreground="{DynamicResource MutedTextBrush}"
                                       FontSize="12"/>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Botones -->
                    <StackPanel Grid.Row="2" Margin="0,20,0,0" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button x:Name="btnEditarDesdeVista"
                                Content="✏️ Editar"
                                Height="48"
                                Margin="0,0,10,0"
                                Style="{StaticResource ButtonPrimary}"
                                Click="BtnEditarDesdeVista_Click"/>
                        <Button x:Name="btnCerrarVista"
                                Content="❌ Cerrar"
                                Height="48"
                                Style="{StaticResource ButtonSoft}"
                                Click="BtnCerrarVista_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Panel con formulario (oculto por defecto) -->
            <Border x:Name="FormPanel"
                    Visibility="Collapsed"
                    Background="{DynamicResource PanelBrush}"
                    BorderBrush="{DynamicResource LineBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Título del Formulario -->
                    <TextBlock x:Name="lblTituloFormulario"
                               Grid.Row="0"
                               Text="Nuevo Artículo"
                               Style="{StaticResource Heading2}"
                               Margin="0,0,0,20"/>

                    <!-- Formulario con scroll -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- Título -->
                            <TextBlock Text="Título *"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextBrush}"
                                       Margin="0,5"/>
                            <TextBox x:Name="txtTitulo"
                                     Height="38"
                                     Margin="0,5"
                                     Background="{DynamicResource InputBrush}"
                                     Foreground="{DynamicResource TextBrush}"
                                     BorderBrush="{DynamicResource LineBrush}"
                                     Padding="10,0"/>

                            <!-- Resumen -->
                            <TextBlock Text="Resumen"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextBrush}"
                                       Margin="0,10,0,5"/>
                            <TextBox x:Name="txtResumen"
                                     Height="70"
                                     Margin="0,5"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     VerticalScrollBarVisibility="Auto"
                                     Background="{DynamicResource InputBrush}"
                                     Foreground="{DynamicResource TextBrush}"
                                     BorderBrush="{DynamicResource LineBrush}"
                                     Padding="10"/>

                            <!-- Contenido -->
                            <TextBlock Text="Contenido"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextBrush}"
                                       Margin="0,10,0,5"/>
                            <TextBox x:Name="txtContenido"
                                     Height="130"
                                     Margin="0,5"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     VerticalScrollBarVisibility="Auto"
                                     Background="{DynamicResource InputBrush}"
                                     Foreground="{DynamicResource TextBrush}"
                                     BorderBrush="{DynamicResource LineBrush}"
                                     Padding="10"/>

                            <!-- Categoría -->
                            <TextBlock Text="Categoría *"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextBrush}"
                                       Margin="0,10,0,5"/>
                            <ComboBox x:Name="cmbCategoria"
                                      Height="38"
                                      Margin="0,5"
                                      DisplayMemberPath="Nombre"
                                      SelectedValuePath="Id"
                                      Background="{DynamicResource InputBrush}"
                                      Foreground="{DynamicResource TextBrush}"
                                      BorderBrush="{DynamicResource LineBrush}"/>

                            <!-- Fecha Publicación -->
                            <TextBlock Text="Fecha de Publicación"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextBrush}"
                                       Margin="0,10,0,5"/>
                            <DatePicker x:Name="dpFechaPublicacion"
                                        Height="38"
                                        Margin="0,5"
                                        Background="{DynamicResource InputBrush}"
                                        Foreground="{DynamicResource TextBrush}"
                                        BorderBrush="{DynamicResource LineBrush}"/>

                            <!-- Palabras Claves -->
                            <TextBlock Text="Palabras Clave (separadas por comas)"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextBrush}"
                                       Margin="0,10,0,5"/>
                            <TextBox x:Name="txtPalabrasClaves"
                                     Height="38"
                                     Margin="0,5"
                                     Background="{DynamicResource InputBrush}"
                                     Foreground="{DynamicResource TextBrush}"
                                     BorderBrush="{DynamicResource LineBrush}"
                                     Padding="10,0"/>

                            <!-- Estado -->
                            <CheckBox x:Name="chkEstado"
                                      Content="Activo"
                                      IsChecked="True"
                                      Margin="0,15,0,5"
                                      Foreground="{DynamicResource TextBrush}"/>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Botones de Acción -->
                    <StackPanel Grid.Row="2" Margin="0,20,0,0">
                        <Button x:Name="btnGuardar"
                                Content="💾 Guardar"
                                Height="40"
                                Margin="0,5"
                                Style="{StaticResource ButtonPrimary}"
                                Click="BtnGuardar_Click"/>
                        <Button x:Name="btnCancelar"
                                Content="❌ Cancelar"
                                Height="44"
                                Margin="0,5"
                                Style="{StaticResource ButtonSoft}"
                                Click="BtnCancelar_Click"
                                HorizontalAlignment="Stretch"
                                Padding="10"/>
                        <Button x:Name="btnEliminar"
                                Content="🗑️ Eliminar"
                                Height="40"
                                Margin="0,5"
                                Style="{StaticResource ButtonDanger}"
                                Click="BtnEliminar_Click"
                                IsEnabled="False"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
