<UserControl x:Class="Enkarta.Views.ArticulosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1100">
    <Grid x:Name="RootGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <!-- Panel Izquierdo: Lista de Artículos -->
        <Grid Grid.Column="0" x:Name="LeftPanel">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Barra de búsqueda rápida (sin botones Buscar/Refrescar) -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                <TextBox x:Name="txtBusquedaRapida" Width="380" Height="38" 
                         VerticalContentAlignment="Center"
                         Background="{DynamicResource InputBrush}"
                         Foreground="{DynamicResource TextBrush}"
                         BorderBrush="{DynamicResource LineBrush}"
                         Padding="12,0"
                         FontSize="14"
                         TextChanged="TxtBusquedaRapida_TextChanged"/>
            </StackPanel>

            <!-- DataGrid de Artículos -->
            <Border Grid.Row="1" 
                    Background="{DynamicResource PanelBrush}"
                    BorderBrush="{DynamicResource LineBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="1">
                <DataGrid x:Name="dgArticulos"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          Background="Transparent"
                          BorderThickness="0"
                          SelectionChanged="DgArticulos_SelectionChanged"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          RowHeight="44">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                        <DataGridTextColumn Header="Título" Binding="{Binding Titulo}" Width="*"/>
                        <DataGridTextColumn Header="Categoría" Binding="{Binding Categoria.Nombre}" Width="150"/>
                        <DataGridTextColumn Header="Fecha Publicación" 
                                            Binding="{Binding FechaPublicacion, StringFormat='{}{0:dd/MM/yyyy}'}" 
                                            Width="130"/>
                        <DataGridCheckBoxColumn Header="Activo" Binding="{Binding Estado}" Width="70"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>

        <!-- Separador -->
        <GridSplitter Grid.Column="1" Width="2" HorizontalAlignment="Stretch" 
                      Background="{DynamicResource LineBrush}" ResizeBehavior="PreviousAndNext"/>

        <!-- Panel Derecho: Formulario -->
        <Border Grid.Column="2" 
                Background="{DynamicResource PanelBrush}"
                BorderBrush="{DynamicResource LineBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20"
                x:Name="FormPanel">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Título del Formulario -->
                <TextBlock x:Name="lblTituloFormulario" Grid.Row="0"
                           Text="Nuevo Artículo"
                           Style="{StaticResource Heading2}"
                           Margin="0,0,0,20"/>

                <!-- Formulario -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Título -->
                        <TextBlock Text="Título *" FontWeight="SemiBold" 
                                   Foreground="{DynamicResource TextBrush}" Margin="0,5"/>
                        <TextBox x:Name="txtTitulo" Height="38" Margin="0,5"
                                 Background="{DynamicResource InputBrush}"
                                 Foreground="{DynamicResource TextBrush}"
                                 BorderBrush="{DynamicResource LineBrush}"
                                 Padding="10,0"/>

                        <!-- Resumen -->
                        <TextBlock Text="Resumen" FontWeight="SemiBold" 
                                   Foreground="{DynamicResource TextBrush}" Margin="0,10,0,5"/>
                        <TextBox x:Name="txtResumen" Height="70" Margin="0,5"
                                 TextWrapping="Wrap" AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 Background="{DynamicResource InputBrush}"
                                 Foreground="{DynamicResource TextBrush}"
                                 BorderBrush="{DynamicResource LineBrush}"
                                 Padding="10"/>

                        <!-- Contenido -->
                        <TextBlock Text="Contenido" FontWeight="SemiBold" 
                                   Foreground="{DynamicResource TextBrush}" Margin="0,10,0,5"/>
                        <TextBox x:Name="txtContenido" Height="130" Margin="0,5"
                                 TextWrapping="Wrap" AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 Background="{DynamicResource InputBrush}"
                                 Foreground="{DynamicResource TextBrush}"
                                 BorderBrush="{DynamicResource LineBrush}"
                                 Padding="10"/>

                        <!-- Categoría -->
                        <TextBlock Text="Categoría *" FontWeight="SemiBold" 
                                   Foreground="{DynamicResource TextBrush}" Margin="0,10,0,5"/>
                        <ComboBox x:Name="cmbCategoria" Height="38" Margin="0,5"
                                  DisplayMemberPath="Nombre"
                                  SelectedValuePath="Id"
                                  Background="{DynamicResource InputBrush}"
                                  Foreground="{DynamicResource TextBrush}"
                                  BorderBrush="{DynamicResource LineBrush}"/>

                        <!-- Fecha Publicación -->
                        <TextBlock Text="Fecha de Publicación" FontWeight="SemiBold" 
                                   Foreground="{DynamicResource TextBrush}" Margin="0,10,0,5"/>
                        <DatePicker x:Name="dpFechaPublicacion" Height="38" Margin="0,5"
                                    Background="{DynamicResource InputBrush}"
                                    Foreground="{DynamicResource TextBrush}"
                                    BorderBrush="{DynamicResource LineBrush}"/>

                        <!-- Palabras Claves -->
                        <TextBlock Text="Palabras Clave (separadas por comas)" FontWeight="SemiBold" 
                                   Foreground="{DynamicResource TextBrush}" Margin="0,10,0,5"/>
                        <TextBox x:Name="txtPalabrasClaves" Height="38" Margin="0,5"
                                 Background="{DynamicResource InputBrush}"
                                 Foreground="{DynamicResource TextBrush}"
                                 BorderBrush="{DynamicResource LineBrush}"
                                 Padding="10,0"/>

                        <!-- Estado -->
                        <CheckBox x:Name="chkEstado" Content="Activo" 
                                  IsChecked="True" Margin="0,15,0,5"
                                  Foreground="{DynamicResource TextBrush}"/>
                    </StackPanel>
                </ScrollViewer>

                <!-- Botones de Acción -->
                <StackPanel Grid.Row="2" Margin="0,20,0,0">
                    <!-- Eliminado: Nuevo -->
                    <Button x:Name="btnGuardar" Content="💾 Guardar" Height="40" Margin="0,5"
                            Style="{StaticResource ButtonPrimary}"
                            Click="BtnGuardar_Click"/>
                    <Button x:Name="btnCancelar" Content="❌ Cancelar" Height="44" Margin="0,5"
                            Style="{StaticResource ButtonSoft}"
                            Click="BtnCancelar_Click"
                            HorizontalAlignment="Stretch" Padding="10"/>
                    <Button x:Name="btnEliminar" Content="🗑️ Eliminar" Height="40" Margin="0,5"
                            Style="{StaticResource ButtonDanger}"
                            Click="BtnEliminar_Click"
                            IsEnabled="False"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>