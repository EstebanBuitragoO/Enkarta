<UserControl x:Class="Enkarta.Views.BusquedaAvanzadaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1100">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Panel de Filtros -->
        <Border Grid.Row="0" 
                Background="{DynamicResource PanelBrush}"
                BorderBrush="{DynamicResource LineBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20"
                Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Columna Izquierda -->
                <StackPanel Grid.Column="0">
                    <!-- Búsqueda por título -->
                    <TextBlock Text="Búsqueda por Título" FontWeight="SemiBold" 
                               Foreground="{DynamicResource TextBrush}" Margin="0,5"/>
                    <TextBox x:Name="txtBusqueda" Height="38" Margin="0,5"
                             Background="{DynamicResource InputBrush}"
                             Foreground="{DynamicResource TextBrush}"
                             BorderBrush="{DynamicResource LineBrush}"
                             Padding="10,0"
                             ToolTip="Busca solo en el título del artículo"
                             GotFocus="TxtBusqueda_GotFocus"
                             LostFocus="TxtBusqueda_LostFocus"/>

                    <!-- Categoría -->
                    <TextBlock Text="Categoría" FontWeight="SemiBold" 
                               Foreground="{DynamicResource TextBrush}" Margin="0,15,0,5"/>
                    <ComboBox x:Name="cmbCategoria" Height="38" Margin="0,5"
                              DisplayMemberPath="Nombre"
                              SelectedValuePath="Id"
                              Background="{DynamicResource InputBrush}"
                              Foreground="{DynamicResource TextBrush}"
                              BorderBrush="{DynamicResource LineBrush}"/>

                    <!-- Fecha de Publicación (single date) -->
                    <TextBlock Text="Fecha de Publicación" FontWeight="SemiBold" 
                               Foreground="{DynamicResource TextBrush}" Margin="0,15,0,5"/>
                    <DatePicker x:Name="dpFecha" Height="38"
                                Background="{DynamicResource InputBrush}"
                                Foreground="{DynamicResource TextBrush}"
                                BorderBrush="{DynamicResource LineBrush}"/>
                </StackPanel>

                <!-- Columna Derecha (oculta visualmente si no la necesitas) -->
                <StackPanel Grid.Column="2" Visibility="Collapsed">
                    <!-- Autores / Etiquetas ocultos intencionadamente -->
                </StackPanel>
            </Grid>
        </Border>

        <!-- Resultados -->
        <Border Grid.Row="1" 
                Background="{DynamicResource PanelBrush}"
                BorderBrush="{DynamicResource LineBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Contador de resultados -->
                <TextBlock x:Name="lblResultados" Grid.Row="0"
                           Text="0 artículos encontrados"
                           FontStyle="Italic" 
                           Foreground="{DynamicResource MutedTextBrush}"
                           Margin="0,0,0,15"/>

                <!-- DataGrid de Resultados: sin Autores/Etiquetas, con columna Acciones -->
                <DataGrid x:Name="dgResultados" Grid.Row="1"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          Background="Transparent"
                          BorderThickness="0"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          RowHeight="44"
                          MouseDoubleClick="DgResultados_MouseDoubleClick">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                        <DataGridTextColumn Header="Título" Binding="{Binding Titulo}" Width="*"/>
                        <DataGridTextColumn Header="Resumen" Binding="{Binding Resumen}" Width="250"/>
                        <DataGridTextColumn Header="Categoría" Binding="{Binding Categoria.Nombre}" Width="130"/>
                        <DataGridTextColumn Header="Fecha Pub." 
                                            Binding="{Binding FechaPublicacion, StringFormat='{}{0:dd/MM/yyyy}'}" 
                                            Width="100"/>
                        <!-- Nueva columna de Acciones -->
                        <DataGridTemplateColumn Header="Acciones" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Button Content="Abrir"
                                                Style="{StaticResource ButtonSoft}"
                                                Padding="8,4"
                                                Tag="{Binding Id}"
                                                Click="BtnAbrir_Click"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Botones de Acción: quitar Exportar -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="btnBuscar" Content="🔍 Buscar" Width="130" Height="42"
                    Style="{StaticResource ButtonPrimary}"
                    Click="BtnBuscar_Click" Margin="5,0"/>
            <Button x:Name="btnLimpiar" Content="🔄 Limpiar Filtros" Width="150" Height="42"
                    Style="{StaticResource ButtonSecondary}"
                    Click="BtnLimpiar_Click" Margin="5,0"/>
        </StackPanel>
    </Grid>
</UserControl>