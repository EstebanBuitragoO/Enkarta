<Window x:Class="Enkarta.Views.ResenaArticuloWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reseña del artículo" Height="360" Width="640" WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundBrush}">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="txtTitulo" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,8"/>

        <ScrollViewer Grid.Row="1">
            <StackPanel>
                <TextBlock Text="Categoría:" FontWeight="Bold"/>
                <TextBlock x:Name="txtCategoria" Margin="0,0,0,8"/>

                <TextBlock Text="Fecha de publicación:" FontWeight="Bold"/>
                <TextBlock x:Name="txtFecha" Margin="0,0,0,8"/>

                <TextBlock Text="Reseña:" FontWeight="Bold"/>
                <TextBlock x:Name="txtResumen" TextWrapping="Wrap" Margin="0,0,0,8"/>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button x:Name="btnIrFuentes" Content="Abrir Fuentes" Style="{StaticResource ButtonPrimary}" Margin="0,0,8,0" Click="BtnIrFuentes_Click"/>
            <Button Content="Cerrar" Style="{StaticResource ButtonSoft}" Click="BtnCerrar_Click"/>
        </StackPanel>
    </Grid>
</Window>