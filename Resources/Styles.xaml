<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<!-- ========================================
         ESTILOS GLOBALES - Encarta Universitaria
         ======================================== -->

	<!-- Colores -->
	<Color x:Key="PrimaryColorStart">#C81D25</Color>
	<Color x:Key="PrimaryColorEnd">#F9A03F</Color>
	<Color x:Key="GreenColorStart">#166534</Color>
	<Color x:Key="GreenColorEnd">#4ADE80</Color>

	<SolidColorBrush x:Key="TextBrush" Color="#222"/>
	<SolidColorBrush x:Key="MutedTextBrush" Color="#888"/>
	<SolidColorBrush x:Key="InputBrush" Color="#FFFFFF"/>
	<SolidColorBrush x:Key="LineBrush" Color="#CCCCCC"/>
	<SolidColorBrush x:Key="PanelBrush" Color="#F9F9F9"/>
	<SolidColorBrush x:Key="HoverBrush" Color="#F0F0F0"/>
	<SolidColorBrush x:Key="SecondaryColor" Color="#6B7280"/>
	<SolidColorBrush x:Key="SidebarTextBrush" Color="#E5E7EB"/>
	<SolidColorBrush x:Key="Hover2Brush" Color="#E0F2F1"/>
	<SolidColorBrush x:Key="GreenBrush" Color="#10B981"/>

	<LinearGradientBrush x:Key="PrimaryGradientBrush" StartPoint="0,0" EndPoint="1,1">
		<GradientStop Color="{StaticResource PrimaryColorStart}" Offset="0"/>
		<GradientStop Color="{StaticResource PrimaryColorEnd}" Offset="1"/>
	</LinearGradientBrush>

	<LinearGradientBrush x:Key="GreenGradientBrush" StartPoint="0,0" EndPoint="1,1">
		<GradientStop Color="{StaticResource GreenColorStart}" Offset="0"/>
		<GradientStop Color="{StaticResource GreenColorEnd}" Offset="1"/>
	</LinearGradientBrush>

	<!-- Fuentes -->
	<FontFamily x:Key="MainFont">Inter, Segoe UI, Arial</FontFamily>
	<FontFamily x:Key="HeadingFont">Segoe UI Semibold, Arial</FontFamily>

	<!-- ========================================
         TEXTBLOCKS
         ======================================== -->

	<!-- Texto Principal -->
	<Style x:Key="TextPrimary" TargetType="TextBlock">
		<Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
		<Setter Property="FontFamily" Value="{StaticResource MainFont}"/>
		<Setter Property="FontSize" Value="14"/>
	</Style>

	<!-- Texto Secundario/Muted -->
	<Style x:Key="TextMuted" TargetType="TextBlock">
		<Setter Property="Foreground" Value="{DynamicResource MutedTextBrush}"/>
		<Setter Property="FontFamily" Value="{StaticResource MainFont}"/>
		<Setter Property="FontSize" Value="12"/>
	</Style>

	<!-- Título H1 -->
	<Style x:Key="Heading1" TargetType="TextBlock">
		<Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
		<Setter Property="FontFamily" Value="{StaticResource HeadingFont}"/>
		<Setter Property="FontSize" Value="24"/>
		<Setter Property="FontWeight" Value="SemiBold"/>
	</Style>

	<!-- Título H2 -->
	<Style x:Key="Heading2" TargetType="TextBlock">
		<Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
		<Setter Property="FontFamily" Value="{StaticResource HeadingFont}"/>
		<Setter Property="FontSize" Value="20"/>
		<Setter Property="FontWeight" Value="SemiBold"/>
	</Style>

	<!-- KPI (números grandes) -->
	<Style x:Key="KPI" TargetType="TextBlock">
		<Setter Property="Foreground" Value="{DynamicResource PrimaryGradientBrush}"/>
		<Setter Property="FontFamily" Value="{StaticResource HeadingFont}"/>
		<Setter Property="FontSize" Value="38"/>
		<Setter Property="FontWeight" Value="Bold"/>
	</Style>

	<!-- ========================================
         BOTONES
         ======================================== -->

	<!-- Botón Base -->
	<Style x:Key="ButtonBase" TargetType="Button">
		<Setter Property="FontFamily" Value="{StaticResource MainFont}"/>
		<Setter Property="FontWeight" Value="Bold"/>
		<Setter Property="FontSize" Value="14"/>
		<Setter Property="Padding" Value="16,12"/>
		<Setter Property="Cursor" Value="Hand"/>
		<Setter Property="BorderThickness" Value="0"/>
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="Button">
					<Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="12"
                            Padding="{TemplateBinding Padding}">
						<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
					</Border>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
		<Style.Triggers>
			<Trigger Property="IsMouseOver" Value="True">
				<Setter Property="Opacity" Value="0.9"/>
			</Trigger>
			<Trigger Property="IsPressed" Value="True">
				<Setter Property="RenderTransform">
					<Setter.Value>
						<ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
					</Setter.Value>
				</Setter>
			</Trigger>
		</Style.Triggers>
	</Style>

	<!-- Botón Primary (Rojo-Dorado) -->
	<Style x:Key="ButtonPrimary" TargetType="Button" BasedOn="{StaticResource ButtonBase}">
		<Setter Property="Background" Value="{DynamicResource PrimaryGradientBrush}"/>
		<Setter Property="Foreground" Value="White"/>
		<Setter Property="Effect">
			<Setter.Value>
				<DropShadowEffect Color="#C81D25" BlurRadius="22" Opacity="0.2" ShadowDepth="6"/>
			</Setter.Value>
		</Setter>
	</Style>

	<!-- Botón Green -->
	<Style x:Key="ButtonGreen" TargetType="Button" BasedOn="{StaticResource ButtonBase}">
		<Setter Property="Background" Value="{DynamicResource GreenGradientBrush}"/>
		<Setter Property="Foreground" Value="White"/>
		<Setter Property="Effect">
			<Setter.Value>
				<DropShadowEffect Color="#166534" BlurRadius="18" Opacity="0.2" ShadowDepth="4"/>
			</Setter.Value>
		</Setter>
	</Style>

	<!-- Botón Soft -->
	<Style x:Key="ButtonSoft" TargetType="Button" BasedOn="{StaticResource ButtonBase}">
		<Setter Property="Background" Value="{DynamicResource HoverBrush}"/>
		<Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
		<Setter Property="BorderBrush" Value="{DynamicResource LineBrush}"/>
		<Setter Property="BorderThickness" Value="1"/>
	</Style>

	<!-- Botón Ghost (transparente) -->
	<Style x:Key="ButtonGhost" TargetType="Button" BasedOn="{StaticResource ButtonBase}">
		<Setter Property="Background" Value="Transparent"/>
		<Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
	</Style>

	<!-- ✅ BOTONES FALTANTES (agregue para compatibilidad) -->

	<!-- Botón Secondary (gris neutro) -->
	<Style x:Key="ButtonSecondary" TargetType="Button" BasedOn="{StaticResource ButtonBase}">
		<Setter Property="Background" Value="{DynamicResource SecondaryColor}"/>
		<Setter Property="Foreground" Value="White"/>
		<Setter Property="BorderThickness" Value="0"/>
	</Style>

	<!-- Botón Success (verde navideño) -->
	<Style x:Key="ButtonSuccess" TargetType="Button" BasedOn="{StaticResource ButtonBase}">
		<Setter Property="Background" Value="{DynamicResource GreenGradientBrush}"/>
		<Setter Property="Foreground" Value="White"/>
		<Setter Property="Effect">
			<Setter.Value>
				<DropShadowEffect Color="#166534" BlurRadius="18" Opacity="0.2" ShadowDepth="4"/>
			</Setter.Value>
		</Setter>
	</Style>

	<!-- Botón Danger (rojo navideño) -->
	<Style x:Key="ButtonDanger" TargetType="Button" BasedOn="{StaticResource ButtonBase}">
		<Setter Property="Background" Value="{DynamicResource PrimaryGradientBrush}"/>
		<Setter Property="Foreground" Value="White"/>
		<Setter Property="Effect">
			<Setter.Value>
				<DropShadowEffect Color="#C81D25" BlurRadius="22" Opacity="0.2" ShadowDepth="6"/>
			</Setter.Value>
		</Setter>
	</Style>

	<!-- Botón de Menú Sidebar -->
	<Style x:Key="MenuButton" TargetType="Button">
		<Setter Property="Background" Value="Transparent"/>
		<Setter Property="Foreground" Value="{DynamicResource SidebarTextBrush}"/>
		<Setter Property="FontFamily" Value="{StaticResource MainFont}"/>
		<Setter Property="FontSize" Value="14"/>
		<Setter Property="Padding" Value="14,12"/>
		<Setter Property="HorizontalContentAlignment" Value="Left"/>
		<Setter Property="Cursor" Value="Hand"/>
		<Setter Property="BorderThickness" Value="0"/>
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="Button">
					<Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="12"
                            Padding="{TemplateBinding Padding}">
						<ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                        VerticalAlignment="Center"/>
					</Border>
					<ControlTemplate.Triggers>
						<Trigger Property="IsMouseOver" Value="True">
							<Setter TargetName="border" Property="Background" Value="#20FFFFFF"/>
						</Trigger>
						<Trigger Property="IsPressed" Value="True">
							<Setter TargetName="border" Property="Background" Value="#30FFFFFF"/>
						</Trigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<!-- ========================================
         INPUTS
         ======================================== -->

	<!-- TextBox -->
	<Style x:Key="TextBoxBase" TargetType="TextBox">
		<Setter Property="Background" Value="{DynamicResource PanelBrush}"/>
		<Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
		<Setter Property="BorderBrush" Value="{DynamicResource LineBrush}"/>
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="FontFamily" Value="{StaticResource MainFont}"/>
		<Setter Property="FontSize" Value="14"/>
		<Setter Property="Padding" Value="12,10"/>
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="TextBox">
					<Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="12">
						<ScrollViewer x:Name="PART_ContentHost"
                                    Margin="{TemplateBinding Padding}"
                                    VerticalAlignment="Center"/>
					</Border>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<!-- ComboBox -->
	<Style x:Key="ComboBoxBase" TargetType="ComboBox">
		<Setter Property="Background" Value="{DynamicResource PanelBrush}"/>
		<Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
		<Setter Property="BorderBrush" Value="{DynamicResource LineBrush}"/>
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="FontFamily" Value="{StaticResource MainFont}"/>
		<Setter Property="FontSize" Value="14"/>
		<Setter Property="Padding" Value="12,10"/>
	</Style>

	<!-- ========================================
         PANELES Y CARDS
         ======================================== -->

	<!-- Panel Base -->
	<Style x:Key="Panel" TargetType="Border">
		<Setter Property="Background" Value="{DynamicResource PanelBrush}"/>
		<Setter Property="BorderBrush" Value="{DynamicResource LineBrush}"/>
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="CornerRadius" Value="14"/>
		<Setter Property="Padding" Value="18"/>
		<Setter Property="Effect">
			<Setter.Value>
				<DropShadowEffect Color="Black" BlurRadius="22" Opacity="0.10" ShadowDepth="8"/>
			</Setter.Value>
		</Setter>
	</Style>

	<!-- Card -->
	<Style x:Key="Card" TargetType="Border" BasedOn="{StaticResource Panel}">
		<Setter Property="Padding" Value="18"/>
	</Style>

	<!-- ========================================
         BADGES
         ======================================== -->

	<Style x:Key="Badge" TargetType="Border">
		<Setter Property="Background" Value="{DynamicResource Hover2Brush}"/>
		<Setter Property="BorderBrush" Value="{DynamicResource LineBrush}"/>
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="CornerRadius" Value="999"/>
		<Setter Property="Padding" Value="10,5"/>
	</Style>

	<Style x:Key="BadgeText" TargetType="TextBlock">
		<Setter Property="Foreground" Value="{DynamicResource GreenBrush}"/>
		<Setter Property="FontFamily" Value="{StaticResource MainFont}"/>
		<Setter Property="FontSize" Value="12"/>
		<Setter Property="FontWeight" Value="Bold"/>
	</Style>

	<!-- ========================================
         TABLAS
         ======================================== -->

	<Style x:Key="DataGridBase" TargetType="DataGrid">
		<Setter Property="Background" Value="{DynamicResource PanelBrush}"/>
		<Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
		<Setter Property="BorderBrush" Value="{DynamicResource LineBrush}"/>
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="GridLinesVisibility" Value="Horizontal"/>
		<Setter Property="HorizontalGridLinesBrush" Value="{DynamicResource LineBrush}"/>
		<Setter Property="RowBackground" Value="Transparent"/>
		<Setter Property="AlternatingRowBackground" Value="Transparent"/>
		<Setter Property="AutoGenerateColumns" Value="False"/>
		<Setter Property="CanUserAddRows" Value="False"/>
		<Setter Property="CanUserDeleteRows" Value="False"/>
		<Setter Property="CanUserResizeRows" Value="False"/>
		<Setter Property="SelectionMode" Value="Single"/>
		<Setter Property="HeadersVisibility" Value="Column"/>
		<Setter Property="FontFamily" Value="{StaticResource MainFont}"/>
		<Setter Property="FontSize" Value="14"/>
	</Style>
</ResourceDictionary>