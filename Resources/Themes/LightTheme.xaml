<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ðŸŽ„ Tema Claro - Navidad ClÃ¡sica -->

    <!-- Colores Base -->
    <Color x:Key="BackgroundColor">#F7FAFC</Color>
    <Color x:Key="PanelColor">#FFFFFF</Color>
    <Color x:Key="TextColor">#17212B</Color>
    <Color x:Key="MutedTextColor">#5E6A78</Color>
    <Color x:Key="LineColor">#E5EAF0</Color>

    <!-- Colores de Acento -->
    <Color x:Key="RedColor">#C81D25</Color>
    <Color x:Key="GreenColor">#166534</Color>
    <Color x:Key="GoldColor">#EAB308</Color>

    <!-- Colores de Hover -->
    <Color x:Key="HoverColor">#FFF5F5</Color>
    <Color x:Key="Hover2Color">#F0FDF4</Color>

    <!-- Colores del Sidebar -->
    <Color x:Key="SidebarGradient1">#10281E</Color>
    <Color x:Key="SidebarGradient2">#0B1E17</Color>
    <Color x:Key="SidebarTextColor">#FDF7F2</Color>

    <!-- SolidColorBrushes -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="PanelBrush" Color="{StaticResource PanelColor}"/>
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
    <SolidColorBrush x:Key="MutedTextBrush" Color="{StaticResource MutedTextColor}"/>
    <SolidColorBrush x:Key="LineBrush" Color="{StaticResource LineColor}"/>
    <SolidColorBrush x:Key="RedBrush" Color="{StaticResource RedColor}"/>
    <SolidColorBrush x:Key="GreenBrush" Color="{StaticResource GreenColor}"/>
    <SolidColorBrush x:Key="GoldBrush" Color="{StaticResource GoldColor}"/>
    <SolidColorBrush x:Key="HoverBrush" Color="{StaticResource HoverColor}"/>
    <SolidColorBrush x:Key="Hover2Brush" Color="{StaticResource Hover2Color}"/>
    <SolidColorBrush x:Key="SidebarTextBrush" Color="{StaticResource SidebarTextColor}"/>

    <!-- Gradientes -->
    <LinearGradientBrush x:Key="SidebarGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource SidebarGradient1}" Offset="0"/>
        <GradientStop Color="{StaticResource SidebarGradient2}" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="PrimaryGradientBrush" StartPoint="0,0.5" EndPoint="1,0.5">
        <GradientStop Color="{StaticResource RedColor}" Offset="0"/>
        <GradientStop Color="{StaticResource GoldColor}" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="GreenGradientBrush" StartPoint="0,0.5" EndPoint="1,0.5">
        <GradientStop Color="{StaticResource GreenColor}" Offset="0"/>
        <GradientStop Color="#34D399" Offset="1"/>
    </LinearGradientBrush>

    <!-- Logo Gradient (Conic gradient simulado) -->
    <RadialGradientBrush x:Key="LogoGradientBrush" GradientOrigin="0.5,0.5">
        <GradientStop Color="{StaticResource RedColor}" Offset="0"/>
        <GradientStop Color="{StaticResource GoldColor}" Offset="0.5"/>
        <GradientStop Color="{StaticResource GreenColor}" Offset="1"/>
    </RadialGradientBrush>

</ResourceDictionary>
